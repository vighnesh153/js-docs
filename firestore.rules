rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
        match /file-meta/{fileMeta=**} {
            allow read;
            allow write: if isAdmin();
        }

        match /files/{file=**} {
            allow read;
            allow write: if isAdmin();
        }

        match /private/{admin=**} {
            allow read: if isAdmin();
            allow write: if isAdmin();
        }

        function isLoggedIn() {
            return request.auth != null && request.auth.uid != null;
        }

        function isAdmin() {
            // If updating admin emails here, update in the constants/configuration too
            let adminEmails = ["vighnesh.raut13@gmail.com", "me@vighnesh153.com", "vighnesh.raut133@gmail.com"];
            let userEmail = request.auth.token.email;
            return isLoggedIn() && userEmail in adminEmails;
        }
    }
}
